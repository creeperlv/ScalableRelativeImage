				<RowDefinition/>
			</Grid.RowDefinitions>
			<ProgressBar Name="Progress_Bar" IsIndeterminate="True" Width="200" VerticalAlignment="Bottom"/>
			<TextBlock Name="Progress_Description" Grid.Row="1" VerticalAlignment="Top" Text="Working..." TextAlignment="Center" Margin="8"/>
