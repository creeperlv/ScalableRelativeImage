			<Border Grid.Row="2" BorderThickness="8" Padding="0" BorderBrush="#A333">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>
					<Grid Width="200" Background="#A333" IsVisible="{Binding #ProjectBrowserToggle.IsChecked}">
						<!--Project Browser-->
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition/>
						</Grid.RowDefinitions>
						<Grid>
							<TextBlock Text="Project" Name="Project_Block" Margin="3,0"/>
						</Grid>
						<Grid Margin="5" Grid.Row="1" Background="#3000">

							<ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto">
								<StackPanel Name="FileList"></StackPanel>
							</ScrollViewer>
						</Grid>
					</Grid>
					<Grid Width="220" Grid.Column="1" Background="#A333"  IsVisible="{Binding #ShapesListToggle.IsChecked}">
						<!--Shapes-->

						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition/>
						</Grid.RowDefinitions>
						<Grid>
							<TextBlock Text="Shapes" Margin="3"/>
