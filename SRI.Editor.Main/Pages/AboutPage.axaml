<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SRI.Editor.Main.Pages.AboutPage">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Image Source="avares://SRI.Editor.Main/Icon-1024.ico" Width="128" Margin="12" VerticalAlignment="Top"/>
		<StackPanel Grid.Column="1" Margin="8">
			<TextBlock Text="SRI Editor" FontSize="28" Name="Title"/>
			<TextBlock Text="Version:" Name="VersionBlock"/>
			<TextBlock Text="Core Version:" Name="CoreVersionBlock"/>
			<TextBlock Text="Third-Party Libraries" FontSize="22"/>
			<TextBlock Text="AvaloniaUI (github.com/AvaloniaUI/Avalonia) - MIT license"/>
			<TextBlock Text="AvaloniaEditor (github.com/AvaloniaUI/AvaloniaEditor) - MIT license"/>
			<TextBlock Text="Magick.NET (github.com/dlemstra/Magick.NET) - Apache-2.0 license"/>
		</StackPanel>
	</Grid>
</UserControl>
