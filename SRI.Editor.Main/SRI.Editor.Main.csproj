    <PackageReference Condition="'$(Configuration)' == 'Debug'" Include="Avalonia.Diagnostics" Version="0.10.11" />
    <PackageReference Include="Avalonia.Direct2D1" Version="0.10.11" />
   </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\SRI.Editor.Core\SRI.Editor.Core.csproj" />
    <ProjectReference Include="..\SRI.Editor.Extension\SRI.Editor.Extension.csproj" />
    <ProjectReference Include="..\SRI.Editor.Styles\SRI.Editor.Styles.csproj" />
  </ItemGroup>
  <ItemGroup>
    <None Update="Resources\Theme.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>
